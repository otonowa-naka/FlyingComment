<Window x:Class="FlyingComment.FlyingCommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyingComment"
        mc:Ignorable="d"
        x:Name="m_FlyingCommentWnd"
        Title="コメント表示" 
        WindowStyle="None"
        Topmost="{Binding Path=CommentWnd_TopMost}" 
        Closing="Window_Closing" 
        Closed="Window_Closed"
        >

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVisibilityConverter" />
        <local:ColorStringToBrushConverter x:Key="ColorStringToBrushConverter" />
    </Window.Resources>
    <Border Background="{Binding Path=CommentWnd_BackColor, Converter={StaticResource ColorStringToBrushConverter}}">
        <Canvas x:Name="m_Canvas"    Visibility="{Binding Path=CommentWnd_Visible, Converter={StaticResource BoolVisibilityConverter}}"
        >
        </Canvas>

    </Border>
</Window>
